{
  "compilerOptions": {
    "outDir": "./dist",
    "allowJs": true,
    "target": "es6",
    "noImplicitAny": true,
    "strictNullChecks": true,
    "baseUrl": ".",
    "module": "CommonJS",
    "moduleResolution": "Node",
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "skipLibCheck": true,
    "rootDir": "./src"
  },
  "exclude": ["node_modules", ".vscode", "./dist/**/*"]
}